	// tab sizes for file type and generally
    "*.py": {
        "tabsize": 4
    },
    "tabsize": 2,

    // make tabs to spaces
    "tabstospaces": true,

	// use auto save to store files every 8 secs
    "autosave": 1,

	// ask if sudo rights required for saving
    "autosu": true,

	// use color column to show 80th line
    "colorcolumn": 80,

	// viusally highlight diffs
    "diffgutter": true,

    // highlight search visually
    "hlsearch": true,

    // show trailling white spaces
    "hltrailingws": true,

    // delete trailling white spaces on save
    "rmtrailingws": true,

    // create paths if not existing on file save
    "mkparents": true,

    // use relative line numbers
    //"relativeruler": true,

    // save undo options also when files are closed
    "saveundo": true,

    // show a scrollbar
    "scrollbar": true,

    // soft wrap lines that are too long for the window
    "softwrap": true
}
